<h1>Create New Blog Post</h1>
<article>
    <form method="POST" action="/addReview">
        <div class="input-field">
            <label>Name:</label>
            <input type="text" name="name" size="50" placeholder="Name">
        </div>
         <div class="input-field">
            <label>Age:</label>
            <input type="number" name="age" min="0" max="120" placeholder="12">
        </div>
        <div class="input-field">
           <label>Game:</label>
           <input type="text" name="game" size="50" placeholder="Tetris">
       </div>
        <div class="input-field">
            <label>Tags:</label>
            <input type="text" name="tags" size="50" placeholder="Tag1 Tag2 Tag3 (seperated by spaces)">
        </div>
        <div class="input-field">
            <label>Review:</label>
            <textarea type="text" name="review" rows="20" placeholder="Game Review..."></textarea>
        </div>
        <button type="submit">Create Game Review </button>
    </form>
</article>
